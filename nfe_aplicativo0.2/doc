├── app.py              # Lógica principal do Flask
├── database.py         # Configuração do banco de dados
├── templates/          # Arquivos HTML da interface
│   ├── layout.html
│   ├── index.html
│   ├── recebimento.html
│   ├── expedicao.html
│   ├── relatorio.html
│   ├── cadastro.html
│   └── protocolo.html
└── static/ 
        js/
        └── scripts.js
        css/            # Arquivos CSS e JS 
        └── style.css